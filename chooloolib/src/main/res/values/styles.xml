<resources>

    <style name="Chooloo" />

    <!--region text -->
    <style name="Chooloo.Text" parent="android:TextAppearance">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="Chooloo.Text.Headline" parent='TextAppearance.Material3.HeadlineMedium' />

    <style name="Chooloo.Text.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="Chooloo.Text.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="Chooloo.Text.Body" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="Chooloo.Text.Caption" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textColor">?android:textColorHint</item>
    </style>

    <!--endregion-->

    <!--region image-->
    <style name="Chooloo.Image" />

    <style name="Chooloo.Image.Profile">
        <item name="android:src">@drawable/person</item>
        <item name="cornerSize">15%</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <!--endregion-->

    <!--region bottom dialog -->
    <style name="Chooloo.BottomSheet" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="android:backgroundDimAmount">0.1</item>
        <item name="bottomSheetStyle">@style/Chooloo.BottomDialog.BottomSheetStyle</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="Chooloo.BottomDialog" />

    <style name="Chooloo.BottomDialog.BottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/Chooloo.BottomDialog.ShapeAppearanceOverlay
        </item>
        <item name="behavior_peekHeight">600dp</item>
    </style>

    <style name="Chooloo.BottomDialog.ShapeAppearanceOverlay">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <!--endregion-->

    <!--region list view -->
    <style name="Chooloo.ListView">
        <item name="android:scrollbars">none</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:divider">@android:color/transparent</item>
    </style>

    <style name="Chooloo.FastScrollView" parent="Chooloo.ListView">
        <item name="bubbleColor">?colorSecondary</item>
        <item name="bubbleTextColor">?colorOnSecondary</item>
        <item name="handleColor">?colorSecondary</item>
    </style>
    <!--endregion-->

    <!--region button-->
    <style name="Chooloo.Button" />

    <style name="Chooloo.Button.Filled" parent="Widget.Material3.Button" />

    <style name="Chooloo.Button.Tonal" parent="Widget.Material3.Button.TonalButton" />

    <style name="Chooloo.Button.Text" parent="Widget.Material3.Button.TextButton" />

    <style name="Chooloo.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton" />

    <style name="Chooloo.Button.Icon" parent="Widget.Material3.Button.IconButton" />

    <style name="Chooloo.Button.Icon.Small" />

    <style name="Chooloo.Button.Icon.Small.Filled">
        <item name="iconTint">?colorOnPrimary</item>
        <item name="android:backgroundTint">?colorSurfaceVariant</item>
    </style>

    <style name="Chooloo.Button.Icon.Medium">
        <item name="iconSize">32dp</item>
    </style>

    <style name="Chooloo.Button.Icon.Medium.Filled">
        <item name="android:checked">true</item>
    </style>

    <style name="Chooloo.Button.Icon.Big">
        <item name="iconTint">@color/m3_text_button_foreground_color_selector</item>
        <item name="iconSize">55dp</item>
    </style>

    <style name="Chooloo.Button.Icon.Big.Filled">
        <item name="android:checked">true</item>
    </style>

    <style name="Chooloo.Button.FAB" parent="Widget.Material3.FloatingActionButton.Large.Primary">
        <item name="fabCustomSize">70dp</item>
        <item name="elevation">0dp</item>
        <item name="maxImageSize">21dp</item>
    </style>

    <style name="Chooloo.Button.FAB.Large">
        <item name="fabCustomSize">77dp</item>
        <item name="maxImageSize">28dp</item>
    </style>
    <!--endregion-->
</resources>
